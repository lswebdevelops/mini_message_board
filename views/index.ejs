<div class="container-messages-general">
    <h3>Recent Messages</h3>
    <div class="messages-container">
        <% data.forEach(message=> { %>
            <div class="messages-container-inner">
                <li>

                    <a class="meessage_link" href="/message/<%= message._id %>">
                        <p class="username-para">
                            <%= message.username.toUpperCase() %>
                        </p>
                        <p class="message-para">
                            <%= message.message %>
                        </p>
                        <p class="date-para">
                            <%= message.createdAt.toDateString() %>
                        </p>
                    </a>
                </li>
            </div>
            <% }) %>

<div class="next_prev_messages_container">
    
                <!-- old messages' button -->

                <% if (nextPage !==null) { %>
                    <a href="/?page=<%= nextPage %>" class="pagination next_message">&lt; View older Messages</a>

                    <% } %>

                        <!-- old messages' button -->
                        <!-- Newest messages' button -->
                        <% if (prevPage !==null) { %>
                            <a href="/?page=<%= prevPage %>" class="pagination prev_message">View Newest Messages &gt;</a>
                            <% } %>
                       <!-- Newest messages' button -->

</div>


    </div>
    <div class="user-message-button-container">
        <div class="user-message-container">
            <div>
                <input type="text" max="100" min="5" placeholder="Username..." />
            </div>
            <div>
                <input type="text" max="100" min="5" placeholder="Message..." />
            </div>
        </div>
        <div class="user-message-container-btn">
            <button class="btn-send">Send</button>
        </div>
    </div>
</div>